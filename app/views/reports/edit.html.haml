- content_for :header do
  %h1
    Edit "#{h @report.name}"
  %nav
    = link_to "Run report", @report
    = link_to "Back to report list", reports_url

.version_controls
  - versions = @report.versions
  - unless versions.empty?
    .version_select
      = render :partial => 'versions', :locals => { :versions => versions }
    %p.separator
      OR
      %hr
  .delete_button
    = button_to("Delete Report", delete_report_url(@report), :method => :delete)

= render :partial => 'form', :object => @report, :as => :report
