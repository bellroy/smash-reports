= simple_form_for [@organization, @report], :url => revert_report_url(@report) do |f|
  = f.input :version, :collection => @report.versions.reverse,
            :value_method => Proc.new {|x| x.id},
            :label_method => Proc.new {|x| "Select version before '#{x.event}' at #{x.created_at}"}
  = f.submit "Revert Report"
